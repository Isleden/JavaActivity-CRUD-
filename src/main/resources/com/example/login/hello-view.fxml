<AnchorPane fx:id="pnStartup" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.login.HelloController">
    <children>
        <VBox fx:id="pnLogin" alignment="CENTER" spacing="20.0" style="-fx-background-color: white;">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label alignment="CENTER" prefHeight="100.0" prefWidth="177.0" text="WELCOME" wrapText="true">
                <font>
                    <Font name="Arial Narrow" size="24.0" />
                </font>
            </Label>
            <GridPane alignment="TOP_CENTER">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="150.0" minWidth="10.0" prefWidth="110.0" />
                    <ColumnConstraints hgrow="SOMETIMES" maxWidth="202.0" minWidth="10.0" prefWidth="199.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <TextField fx:id="logName" GridPane.columnIndex="1" />
                    <PasswordField fx:id="logPass" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                    <Label text="Username">
                        <font>
                            <Font name="Agency FB" size="18.0" />
                        </font>
                    </Label>
                    <Label text="Password" GridPane.rowIndex="1">
                        <font>
                            <Font name="Agency FB" size="18.0" />
                        </font>
                    </Label>
                  <Button contentDisplay="RIGHT" onAction="#onHelloButtonClick" text="Sign In" GridPane.columnIndex="1" GridPane.rowIndex="2">
                      <font>
                          <Font name="Georgia Bold" size="18.0" />
                      </font>
                  </Button>
               <Button mnemonicParsing="false" onAction="#onRegisterViewButtonClick" text="Register" GridPane.rowIndex="2">
                  <font>
                     <Font name="Georgia Bold" size="18.0" />
                  </font>
               </Button>
                </children>
            </GridPane>
        </VBox>
    </children>
</AnchorPane>
